@model ML.Pelicula
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string urlimagen = System.Configuration.ConfigurationManager.AppSettings["UrlImagen"].ToString();
    string accion = Session["Accion"]?.ToString();
}

<style>
    @@import url('https://fonts.googleapis.com/css?family=Montserrat:300,400,700,800');

    * {
        box-sizing: border-box;
        margin: 0;
    }

    html, body {
        margin: 0;
        background: black;
        font-family: 'Montserrat', helvetica, arial, sans-serif;
        font-size: 14px;
        font-weight: 400;
    }

    .link {
        display: block;
        text-align: center;
        color: #777;
        text-decoration: none;
        padding: 10px;
    }

    .movie_card {
        position: relative;
        display: block;
        width: 800px;
        height: 400px;
        margin: 80px auto;
        overflow: hidden;
        border-radius: 5px;
        transition: all 0.4s;
        box-shadow: 0px 0px 120px -25px rgba(0,0,0, 0.5);
        &:hover

    {
        transform: scale(1.02);
        box-shadow: 0px 0px 80px -25px rgba(0,0,0, 0.5);
        transition: all 0.4s;
    }

    .info_section {
        position: relative;
        width: 100%;
        height: 100%;
        background-blend-mode: multiply;
        z-index: 2;
        border-radius: 10px;
        .movie_header

    {
        position: relative;
        padding: 25px;
        height: 40%;
        h1

    {
        color: black;
        font-weight: 400;
    }

    h4 {
        color: #555;
        font-weight: 400;
    }

    .minutes {
        display: inline-block;
        margin-top: 15px;
        color: #555;
        padding: 5px;
        border-radius: 5px;
        border: 1px solid rgba(0,0,0,0.05);
    }

    .type {
        display: inline-block;
        color: #959595;
        margin-left: 10px;
    }

    .locandina {
        position: relative;
        float: left;
        margin-right: 20px;
        height: 120px;
        box-shadow: 0 0 20px -10px rgba(0,0,0,0.5);
    }

    }

    .movie_desc {
        padding: 15px;
        width:80%;
        height: 45%;
        .text

    {
        color: #545454;
    }

    }

    .movie_social {
        height: 10%;
        padding-left: 95%;
        padding-bottom: 20px;
        ul

    {
        list-style: none;
        padding: 0;
        li

    {
        display: inline-block;
        color: rgba(0,0,0,0.3);
        transition: color 0.3s;
        transition-delay: 0.15s;
        margin: 0 10px;
        &:hover

    {
        transition: color 0.3s;
        color: rgba(0,0,0,0.7);
    }

    i {
        font-size: 19px;
        cursor: pointer;
    }

    }
    }
    }
    }

    .blur_back {
        position: absolute;
        top: 0;
        z-index: 1;
        height: 100%;
        right: 0;
        background-size: cover;
        border-radius: 11px;
    }

    }

    @@media screen and (min-width: 768px) {
        .movie_header {
            width: 65%;
        }

        .movie_desc {
            width: 50%;
        }

        .info_section {
            background: linear-gradient(to right, #e5e6e6 50%, transparent 100%);
        }

        .blur_back {
            width: 80%;
            background-position: -100% 10% !important;
        }
    }

    @@media screen and (max-width: 768px) {
        .movie_card {
            width: 95%;
            margin: 70px auto;
            min-height: 350px;
            height: auto;
        }

        .blur_back {
            width: 100%;
            background-position: 50% 50% !important;
        }

        .movie_header {
            width: 100%;
            margin-top: 85px;
        }

        .movie_desc {
            width: 100%;
        }

        .info_section {
            background: linear-gradient(to top, #e5e6e6 50%, transparent 100%);
            display: inline-grid;
        }
    }
</style>

<div class="container">

    @*<div class="row">*@
    @foreach (ML.Pelicula pelicula in Model.Peliculas)
    {
        <input type="hidden" name="id" value="@pelicula.id" />
        <div class="row">
            <span id="lblFavoritas_@pelicula.id" class="form-label"></span>
        </div>
        if (accion != "Populares")
        {
            <div class="movie_card" id="card_@pelicula.id">
                <div class="info_section">
                    <div class="movie_header">
                        <img class="locandina" src="@urlimagen@pelicula.poster_path" />
                        <h1>@pelicula.title</h1>
                    </div>
                    <div class="movie_desc">
                        <p class="text">
                            @pelicula.overview
                        </p>
                    </div>
                    <div class="movie_social">
                        @if (pelicula.favorito != true)
                        {
                            <a class="card-action"><i id="iconfavorite_@pelicula.id" data-value="@pelicula.id" class="bi bi-heart" style="color:red; font-size: 25px" onclick="Favorite(this)"></i></a>
                        }
                        else
                        {
                            <a class="card-action"><i id="iconfavorite_@pelicula.id" data-value="@pelicula.id" class="bi bi-heart-fill" style="color:red; font-size: 25px" onclick="Favorite(this)"></i></a>
                        }
                    </div>
                </div>
                <div class="blur_back" style="background:url(@urlimagen@pelicula.backdrop_path)"></div>
            </div>
        }
        else
        {
            <div class="movie_card">
                <div class="info_section">
                    <div class="movie_header">
                        <img class="locandina" src="@urlimagen@pelicula.poster_path" />
                        <h1>@pelicula.title</h1>
                    </div>
                    <div class="movie_desc">
                        <p class="text">
                            @pelicula.overview
                        </p>
                    </div>
                    <div class="movie_social">
                        @if (pelicula.favorito != true)
                        {
                            <a class="card-action"><i id="iconfavorite_@pelicula.id" data-value="@pelicula.id" class="bi bi-heart" style="color:red; font-size: 25px" onclick="Favorite(this)"></i></a>
                        }
                        else
                        {
                            <a class="card-action"><i id="iconfavorite_@pelicula.id" data-value="@pelicula.id" class="bi bi-heart-fill" style="color:red; font-size: 25px" onclick="Favorite(this)"></i></a>
                        }
                    </div>
                </div>
                <div class="blur_back" style="background:url(@urlimagen@pelicula.backdrop_path)"></div>
            </div>
        }
    }
        @*</div>*@
    </div>


<script src="~/Scripts/jquery-3.4.1.js"></script>
<script>
    function Favorite(input) {
        $(".form-label").removeClass('bi bi-check-all alert alert-success bi bi-x-circle alert alert-danger').empty();
        let id = input.id;
        let clase = input.className;
        var IdPelicula = input.getAttribute("data-value");
        if (clase != "bi bi-heart") {
            $.ajax({
                type: 'GET',
                url: '/Peliculas/DeleteFavoritos',
                dataType: 'json',
                contentType: 'application/json',
                data: { idPelicula: IdPelicula },
                success: function (result) {
                    if (result.Correct) {
                        $("#lblFavoritas_" + IdPelicula).addClass('bi bi-check-all alert alert-success').text('Eliminada de Favoritas');
                        $("#" + id).removeClass("bi bi-heart-fill").addClass("bi bi-heart");
                        $("#card_" + IdPelicula).empty();
                    }
                    else {
                        $("#lblFavoritas_"+IdPelicula).addClass('bi bi-x-circle alert alert-danger').text('No se encuentra en Favoritas');
                        }
                },
                error: function (ex) {
                alert('Failed.' + ex);
               }
            });
        } else {
                        $.ajax({
            type: 'GET',
            url: '/Peliculas/AddFavoritos',
            dataType: 'json',

            contentType: 'application/json',
            data: { idPelicula: IdPelicula },
            success: function (result) {
                if (result.Correct) {
                    $("#lblFavoritas_" + IdPelicula).addClass('bi bi-check-all alert alert-success').text('Agregada a Favoritas');
                    $("#" + id).removeClass("bi bi-heart").addClass("bi bi-heart-fill");
                }
                else {
                    $("#lblFavoritas_" + IdPelicula).addClass('bi bi-x-circle alert alert-danger').text('Ya se encuentra en Favoritas');
                }
            },
     error: function (ex) {
     alert('Failed.' + ex);
     }
});
        }
    }
</script>